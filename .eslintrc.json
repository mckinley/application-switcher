{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "expect": false,
    "sinon": false,
    "chrome": false
  },
  "parser": "babel-eslint",
  "rules": {
    "no-console": "off",
    "indent": [
      "error",
      2
    ],
    "key-spacing": ["error", {
      "mode": "strict"
    }],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^_"
    }],
    "object-curly-spacing": ["error", "always"],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
